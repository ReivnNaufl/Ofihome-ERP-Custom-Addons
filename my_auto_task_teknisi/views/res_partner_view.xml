<odoo>
  <record id="view_partner_form_inherit_coords_after_address_block" model="ir.ui.view">
    <field name="name">res.partner.form.inherit.coords.after.address.block</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@class='o_address_format']" position="after">
        <group string="Coordinates" colspan="2">
          <field name="x_latitude" widget="float"/>
          <field name="x_longitude" widget="float"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>